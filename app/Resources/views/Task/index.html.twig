{% extends 'layout.html.twig' %}

{%  block body %}
{{ parent() }}


{{ include('messages/success.html.twig') }}

    <div class="container-fluid">
        <div class="col-sm-12">
            <div class="page-header margin-none">
                <h2 class=pading-none> tasks </h2>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Creado el</th>
                            <th>Usuario</th>
                            <th>Estado</th>
                             <th>Actions</th>
                            
                        </tr>
                        </thead>
                        {% for task in tasks %}
                            <tr data-id={{ task.id}}>
                                <td>{{task.title }}</td>
                                <td>{{task.createdAt|date('d-m-Y H:i')}}</td>
                                <td>{{task.user.fullname}}</td>
                                <td>
                                    {% if task.status == 0 %}
                                        <span class="glyphicons glyphicons-clock text-danger">0</span>
                                    {% elseif task.status ==1 %}
                                       <span class="glyphicons glyphicons-ok text-success">1</span>
                                    {% endif %}
                                </td>
                                <td class="actions">
                                    <a href="{{ path('task_view',{ id : task.id}) }}" class="btn btn-sm btn-info">View</a>
                                    <a href="{{ path('task_edit',{ id : task.id}) }}" class="btn btn-sm btn-primary">Edit</a>
                                    <a href="#" class="btn btn-sm btn-danger btn-delete">Delete</a>
                                </td>
                               
                            </tr>
                        {% endfor %}
                </table>
            </div>
        </div>
    </div>
   
{% endblock %}
